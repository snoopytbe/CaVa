<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inc_titre"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/tit_retour"
        style="@style/CaVa.ImageTitre"
        app:srcCompat="@drawable/left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tit_date"
        style="@style/CaVa.Titre"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Dimanche 13 dÃ©cembre 2018"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tit_copy"
        style="@style/CaVa.ImageTitre"
        android:cropToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tit_threedots"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/copy" />

    <ImageView
        android:id="@+id/tit_threedots"
        style="@style/CaVa.ImageTitre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/three_dots" />

</android.support.constraint.ConstraintLayout>