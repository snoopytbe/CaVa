<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fet_date"
        style="@style/CaVa.Titre.Large"
        android:text="Dimanche 13 dÃ©cembre 2018"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fet_titreTraitementActuel"
        style="@style/CaVa.TextView.BigMargin"
        android:layout_marginTop="24dp"
        android:text="Traitement actuel :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fet_date" />


    <EditText
        android:id="@+id/fet_actuel"
        style="@style/CaVa.EditText.BigMargin"
        android:inputType="textMultiLine"
        android:hint=""
        android:lines="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fet_titreTraitementActuel" />

    <TextView
        android:id="@+id/fet_textrespecte"
        style="@style/CaVa.TextView.BigMargin"
        android:text="Traitement pris :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fet_actuel" />

    <CheckBox
        android:id="@+id/fet_respecte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/fet_textrespecte"
        app:layout_constraintStart_toEndOf="@+id/fet_textrespecte"
        app:layout_constraintTop_toTopOf="@+id/fet_textrespecte" />

    <TextView
        android:id="@+id/fet_titrecommentaire"
        style="@style/CaVa.TextView.BigMargin"
        android:layout_marginTop="24dp"
        android:text="Commentaire sur le traitement :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fet_textrespecte" />


    <EditText
        android:id="@+id/fet_commentaire"
        style="@style/CaVa.EditText.BigMargin"
        android:inputType="textMultiLine"
        android:lines="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fet_titrecommentaire" />

    <Button
        android:id="@+id/fet_OK"
        style="@style/CaVa.Bouton"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>