<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/include_titre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/fet_titreTraitementActuel"
        style="@style/CaVa.TextView.BigMargin"
        android:layout_marginTop="@dimen/margin_huge"
        android:text="Traitement actuel :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inc_titre" />


    <EditText
        android:id="@+id/fet_actuel"
        style="@style/CaVa.EditText.BigMargin"
        android:inputType="textMultiLine"
        android:hint=""
        android:lines="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fet_titreTraitementActuel" />

    <TextView
        android:id="@+id/fet_textrespecte"
        style="@style/CaVa.TextView.BigMargin"
        android:text="Traitement pris :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fet_actuel" />

    <CheckBox
        android:id="@+id/fet_respecte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        app:layout_constraintBottom_toBottomOf="@+id/fet_textrespecte"
        app:layout_constraintStart_toEndOf="@+id/fet_textrespecte"
        app:layout_constraintTop_toTopOf="@+id/fet_textrespecte" />

    <TextView
        android:id="@+id/fet_titrecommentaire"
        style="@style/CaVa.TextView.BigMargin"
        android:layout_marginTop="@dimen/margin_huge"
        android:text="Commentaire sur le traitement :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fet_textrespecte" />


    <EditText
        android:id="@+id/fet_commentaire"
        style="@style/CaVa.EditText.BigMargin"
        android:inputType="textMultiLine"
        android:lines="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fet_titrecommentaire" />

</android.support.constraint.ConstraintLayout>