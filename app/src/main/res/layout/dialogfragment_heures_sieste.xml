<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CaVaDialogTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_large">

    <TextView
        android:id="@+id/dhsi_textSieste"
        style="@style/CaVa.TextView.Dialog"
        android:text="Sieste"
        app:layout_constraintEnd_toEndOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/dhsi_sieste"
        style="@style/CaVa.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/dhsi_textSieste"
        app:layout_constraintStart_toStartOf="@+id/dhsi_textSieste"
        app:layout_constraintTop_toBottomOf="@+id/dhsi_textSieste" />

    <Button
        android:id="@+id/dhsi_boutonCancel"
        style="@style/CaVa.Bouton"
        android:text="Annuler"
        app:layout_constraintEnd_toStartOf="@+id/dhsi_boutonOK"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dhsi_sieste" />

    <Button
        android:id="@+id/dhsi_boutonOK"
        style="@style/CaVa.Bouton"
        android:text="OK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dhsi_boutonCancel"
        app:layout_constraintTop_toBottomOf="@+id/dhsi_sieste" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".50" />

</android.support.constraint.ConstraintLayout>