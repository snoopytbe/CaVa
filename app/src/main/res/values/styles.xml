<resources>

    <!-- Base application theme. -->
    <style name="CaVa" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>

        <item name="android:alertDialogTheme">@style/CaVaDialogTheme</item>

    </style>

    <style name="CaVaDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@null</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="CaVa.TextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CaVa.TextView.TitreRubrique">
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CaVa.TextView.TitreRubrique.Centre">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="CaVa.TextView.Rubrique">
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_little</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:gravity">start|top</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="CaVa.TextView.Rubrique.Centre">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="CaVa.TextView.Rubrique.CentreAligne">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_tiny</item>
    </style>

    <style name="CaVa.TextView.Dialog">
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_huge</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
    </style>

    <style name="CaVa.SymptomeInactif">
        <item name="android:textColor">@color/colorTertiaryText</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="CaVa.SymptomeActif">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="CaVa.ImageHumeur">
        <item name="android:layout_width">@dimen/largeur_image_humeur</item>
        <item name="android:layout_height">@dimen/largeur_image_humeur</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="CaVa.ImageTitre">
        <item name="android:layout_width">@dimen/largeur_image_titre</item>
        <item name="android:layout_height">@dimen/largeur_image_titre</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="CaVa.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:gravity">start|top</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CaVa.EditText.BigMargin">
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
    </style>

    <style name="CaVa.Bouton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CaVa.Titre" parent="@android:style/TextAppearance.Material">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
        <item name="android:timePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:timePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDatePicker" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="CaVa.ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
    </style>

    <style name="CaVa.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>


</resources>
